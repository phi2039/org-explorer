{
  "$schema": "http://json-schema.org/draft/2019-09/schema#",
  "title": "node schema",
  "version": 0,
  "description": "describes a single organizational node",
  "definitions": {
    "nullableString": {
      "type": ["string", "null"]
    },
    "nullableNumber": {
      "type": ["number", "null"]
    }
  },
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "primary": true
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 64
    },
    "type": {
      "type": "string",
      "enum": [
        "group",
        "function"
      ]
    },
    "parent": {
      "$ref": "#/definitions/nullableString"
    },
    "path": {
      "type": "string"
    },
    "description": {
      "$ref": "#/definitions/nullableString",
      "maxLength": 512
    },
    "manager": {
      "$ref": "#/definitions/nullableString",
      "maxLength": 64
    },
    "payerFacing": {
      "type": "string"
    },
    "providerFacing": {
      "type": "string"
    },
    "requiresPHI": {
      "type": "string"
    },
    "currentFTE": {
      "$ref": "#/definitions/nullableNumber",
      "minimum": 0
    },
    "managerFTE": {
      "$ref": "#/definitions/nullableNumber",
      "minimum": 0
    }
  },
  "required": [
    "id",
    "name",
    "type"
  ],
  "indexes": [
    "type"
  ]
}
